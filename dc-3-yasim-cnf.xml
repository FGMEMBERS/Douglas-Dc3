<PropertyList include="dc-3-base.xml">

  <sim>
    <description>Douglas DC-3/C-47 (YASim)</description>
    <flight-model>yasim</flight-model>
    <aero>dc-3-yasim</aero>

    <startup>
      <splash-texture>Aircraft/Douglas-Dc3/dc-3-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/Douglas-Dc3/Models/dc-3.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>
    
    <!-- freeze fuel = true: fuel consumption calculated by nasal -->
    <freeze>
      <fuel type="bool">true</fuel>
    </freeze>

    <weight n="0">
      <name>Compartiment A</name>
        <weight-lb>0</weight-lb>
        <max-lb>600</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="1">
      <name>Compartiment B</name>
        <weight-lb>0</weight-lb>
        <max-lb>800</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="2">
      <name>Compartiment C</name>
        <weight-lb>0</weight-lb>
        <max-lb>1000</max-lb>
        <min-lb>0</min-lb>
    </weight>


    <weight n="3">
      <name>Compartiment D</name>
        <weight-lb>0</weight-lb>
        <max-lb>3000</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="4">
      <name>Compartiment E</name>
        <weight-lb>0</weight-lb>
        <max-lb>3000</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="5">
      <name>Compartiment F</name>
        <weight-lb>0</weight-lb>
        <max-lb>2400</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <!--<weight n="6">
        <weight-lb>0</weight-lb>
        <max-lb>1300</max-lb>
        <min-lb>0</min-lb>
    </weight>

    <weight n="7">
        <weight-lb>0</weight-lb>
        <max-lb>350</max-lb>
        <min-lb>0</min-lb>
    </weight>-->

    <multiplay n="0">
      <generic n="0">
        <string n="1" type="string">wheels</string>
      </generic>
    </multiplay>

    <sound>
      <path>Aircraft/Douglas-Dc3/Sounds/dc-3-sound.xml</path>
    </sound>
  </sim>

  <!-- ################################################### -->
  <!-- ######## DUAL CONTROL and FUEL management ######### -->
  <nasal>
    <dual_control_tools>
      <file>Aircraft/Douglas-Dc3/DualControl/dual-control-tools.nas</file>
    </dual_control_tools>
    <aircraft_dual_control>
      <file>Aircraft/Douglas-Dc3/DualControl/dc-3-dual-control.nas</file>
    </aircraft_dual_control>
    <dual_control>
      <file>Aircraft/Douglas-Dc3/DualControl/pilot-dual-control.nas</file>
    </dual_control>
    <fuel>
      <file>Aircraft/Douglas-Dc3/Nasal/fuel-yasim.nas</file>
    </fuel>
  </nasal>
  <!-- ######## DUAL CONTROL and FUEL management ######### -->
  <!-- ################################################### -->
    
</PropertyList>
