<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
  <name>FR-2-Demarrage</name>
  <description>
Ce tutoriel va vous apprendre a demarrer les moteurs du DC-3.


  </description>

  
  <init>
    <set>
      <property>controls/gear/tailwheel-lock</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/flight/flaps</property>
      <value>0.0</value>
    </set>
    <set>
      <property>controls/engines/engine/magnetos</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/engines/engine/throttle</property>
      <value>0.0</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/mixture</property>
      <value>0.0</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/mixture</property>
      <value>0.0</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/propeller-pitch</property>
      <value>0.0</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/propeller-pitch</property>
      <value>0.0</value>
    </set>
    <set>
      <property>engines/engine/running</property>
      <value>false</value>
    </set>
    <set>
      <property>environment/weather-scenario</property>
      <value>Fair weather</value>
    </set>
    <set>
      <property>controls/flight/elevator-trim</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/flight/elevator-trim</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/flight/aileron-trim</property>
      <value>0</value>
    </set>

    <set>
      <property>controls/flight/rudder-trim</property>
      <value>0</value>
    </set>

    <set>
      <property>instrumentation/doors/crew/position-norm</property>
      <value>0</value>
    </set>

    <set>
      <property>instrumentation/doors/cargo/position-norm</property>
      <value>0</value>
    </set>
  </init>


  <step>
    <message>Bienvenue à bord du DC-3, il est grand temps de démarrer les moteurs !</message>
  </step>
  
<!-- Sélection réservoir principal gauche-->
  <step>
    <message>Selectionnez le réservoir principal gauche(Main LH) </message>
    <view>
      <heading-offset-deg>-10</heading-offset-deg>
      <pitch-offset-deg>-77</pitch-offset-deg>
      <roll-offset-deg>0</roll-offset-deg>
      <x-offset-m>-0.2</x-offset-m>
      <y-offset-m>0.3</y-offset-m>
      <z-offset-m>-8.18</z-offset-m>
      <field-of-view>45</field-of-view>
    </view>
<!--	<marker>
		<x-m>-8.3656</x-m>
		<y-m>-0.146</y-m>
		<z-m>-0.2815</z-m>
		<scale>1</scale>
	</marker>-->
	<error>
	<message>Placez l'interrupteur sur la position Main LH</message>
      <condition>
        <less-than>
          <property>controls/fuel/left-valve-pos</property>
          <value>3</value>
        </less-than>
      </condition>
    </error>
    <error>
	  <message>Placez l'interrupteur sur la position Main LH</message>
      <condition>
        <greater-than>
          <property>controls/fuel/left-valve-pos</property>
          <value>3</value>
        </greater-than>
      </condition>
    </error>
    <exit> 
      <condition>
		<equals>
          <property>controls/fuel/left-valve-pos</property>
          <value>3</value>
        </equals>
      </condition>
    </exit>  
  </step>
  
<!-- sélection réservoir principal droit-->
  <step>
    <message>Selectionnez le réservoir principal droit (Main RH) </message>
    <view>
      <heading-offset-deg>0</heading-offset-deg>
      <pitch-offset-deg>-80</pitch-offset-deg>
      <roll-offset-deg>-5</roll-offset-deg>
      <x-offset-m>0.2</x-offset-m>
      <y-offset-m>0.5</y-offset-m>
      <z-offset-m>-8.175</z-offset-m>
      <field-of-view>43</field-of-view>
    </view>
	<error>
	  <message>Placez l'interrupteur sur la position Main RH</message>
      <condition>
        <less-than>
          <property>controls/fuel/right-valve-pos</property>
          <value>2</value>
        </less-than>
      </condition>
    </error>
    <error>
	  <message>Placez l'interrupteur sur la position Main RH</message>
      <condition>
        <greater-than>
          <property>controls/fuel/right-valve-pos</property>
          <value>2</value>
        </greater-than>
      </condition>
    </error>
    <exit>
      <condition>
		<equals>
          <property>controls/fuel/right-valve-pos</property>
          <value>2</value>
        </equals>
      </condition>
    </exit>  
  </step>

  
<!-- battery master-->
  <step>
    <message>Allumez la batterie (Master Battery)</message>
    <view>
      <heading-offset-deg>53</heading-offset-deg>
      <pitch-offset-deg>20</pitch-offset-deg>
      <roll-offset-deg>5</roll-offset-deg>
      <x-offset-m>-0.15</x-offset-m>
      <y-offset-m>0.5</y-offset-m>
      <z-offset-m>-8.16</z-offset-m>
      <field-of-view>55.0</field-of-view>
    </view>
    <exit>
      <condition>
		<equals>
          <property>controls/electric/battery-switch-pos</property>
          <value>1</value>
        </equals>
      </condition>
    </exit>  
  </step>

<!-- boost pump-->
  <step>
    <message>Tournez l'interrupteur Booster pump Right pour allumer la pompe de gavage droite</message>
    <view>
      <heading-offset-deg>-28</heading-offset-deg>
      <pitch-offset-deg>10</pitch-offset-deg>
      <roll-offset-deg>5</roll-offset-deg>
      <x-offset-m>0</x-offset-m>
      <y-offset-m>0.5</y-offset-m>
      <z-offset-m>-8.16</z-offset-m>
      <field-of-view>50</field-of-view>
    </view>
    <exit>
      <condition>
		<equals>
          <property>controls/fuel/tank[1]/boost-pump-pos</property>
          <value>1</value>
        </equals>
      </condition>
    </exit>
  </step>

 <!-- Mixture-->
  <step>
    <message>Placez la manette de richesse sur Auto Rich</message>
    <view>
      <heading-offset-deg>0</heading-offset-deg>
      <pitch-offset-deg>-65</pitch-offset-deg>
      <roll-offset-deg>0</roll-offset-deg>
      <x-offset-m>0.15</x-offset-m>
      <y-offset-m>0.3</y-offset-m>
      <z-offset-m>-7.95</z-offset-m>
      <field-of-view>55.0</field-of-view>
    </view>

    <error>
      <message>Placez la souris sur la manette rouge et faites la bouger au clic ou à la mollette</message>
      <message>Augmentez légèrement la richesse</message>
      <condition>
        <less-than>
          <property>controls/engines/engine[1]/mixture</property>
          <value>0.55</value>
        </less-than>
      </condition>
    </error>
    <error>
      <message>C'est un peu trop</message>
      <condition>
        <greater-than>
          <property>controls/engines/engine[1]/mixture</property>
          <value>0.75</value>
        </greater-than>
      </condition>
    </error>
    <exit>
      <condition>
        <and>
          <greater-than>
            <property>controls/engines/engine[1]/mixture</property>
            <value>0.55</value>
          </greater-than>
          <less-than>
            <property>controls/engines/engine[1]/mixture</property>
            <value>0.75</value>
          </less-than>
        </and>
      </condition>
    </exit>
  </step>

<!-- Gaz -->
  <step>
    <message>Avancez légèrement la manette des gaz (10%)</message>
    <view>
      <heading-offset-deg>-10</heading-offset-deg>
      <pitch-offset-deg>-85</pitch-offset-deg>
      <roll-offset-deg>0</roll-offset-deg>
      <x-offset-m>0.05</x-offset-m>
      <y-offset-m>0.29</y-offset-m>
      <z-offset-m>-8.1</z-offset-m>
      <field-of-view>60.0</field-of-view>
    </view>

    <error>
      <message>Augmentez légèrement les gaz</message>
      <condition>
        <less-than>
          <property>controls/engines/engine[0]/throttle</property>
          <value>0.02</value>
        </less-than>
      </condition>
    </error>
    <error>
      <message>C'est un peu trop</message>
      <condition>
        <greater-than>
          <property>controls/engines/engine[0]/throttle</property>
          <value>0.2</value>
        </greater-than>
      </condition>
    </error>
    <exit>
      <condition>
        <and>
          <greater-than>
            <property>controls/engines/engine[0]/throttle</property>
            <value>0.05</value>
          </greater-than>
          <less-than>
            <property>controls/engines/engine[0]/throttle</property>
            <value>0.15</value>
          </less-than>
        </and>
      </condition>
    </exit>
  </step>

<!-- RPM -->
  <step>
    <message>Placez la manette du pas de l'hélice entre 70% et 100%</message>
    <view>
      <heading-offset-deg>-10</heading-offset-deg>
      <pitch-offset-deg>-85</pitch-offset-deg>
      <roll-offset-deg>0</roll-offset-deg>
      <x-offset-m>-0.1</x-offset-m>
      <y-offset-m>0.29</y-offset-m>
      <z-offset-m>-8.1</z-offset-m>
      <field-of-view>60.0</field-of-view>
    </view>

    <error>
      <message>Augmentez le pas</message>
      <condition>
        <less-than>
          <property>controls/engines/engine[0]/propeller-pitch</property>
          <value>0.7</value>
        </less-than>
      </condition>
    </error>
    <exit>
      <condition>
        <and>
          <greater-than>
            <property>controls/engines/engine[0]/propeller-pitch</property>
            <value>0.70</value>
          </greater-than>
          <less-than>
            <property>controls/engines/engine[0]/propeller-pitch</property>
            <value>1</value>
          </less-than>
        </and>
      </condition>
    </exit>
  </step>

 <!-- Magneto droit sur both-->
  <step>
    <message>Placez les magnétos du moteur droit sur both</message>
    <view>
      <heading-offset-deg>0</heading-offset-deg>
      <pitch-offset-deg>0</pitch-offset-deg>
      <roll-offset-deg>0</roll-offset-deg>
      <x-offset-m>0</x-offset-m>
      <y-offset-m>0.55</y-offset-m>
      <z-offset-m>-8.1</z-offset-m>
      <field-of-view>55.0</field-of-view>
    </view>
    <exit>
      <condition>
		<equals>
          <property>controls/engines/engine[1]/magnetos-pos</property>
          <value>3</value>
        </equals>
      </condition>
    </exit>
  </step>

  <step>
    <message>Vérifions que personne ne se trouve à proximité de l'hélice</message>
    <view>
      <heading-offset-deg>-100</heading-offset-deg>
      <pitch-offset-deg>-30</pitch-offset-deg>
      <roll-offset-deg>0.0</roll-offset-deg>
      <x-offset-m>0.65</x-offset-m>
      <y-offset-m>0.48</y-offset-m>
      <z-offset-m>-7.95</z-offset-m>
      <field-of-view>65.0</field-of-view>
    </view>
  </step>

<!-- start droite-->
  <step>
    <message>Vous pouvez maintenant démarrer le moteur en maintenant le starter droit enfoncé quelques secondes</message>

    <view>
      <heading-offset-deg>-24</heading-offset-deg>
      <pitch-offset-deg>10</pitch-offset-deg>
      <roll-offset-deg>0</roll-offset-deg>
         <x-offset-m>0</x-offset-m>
         <y-offset-m>0.5</y-offset-m>
         <z-offset-m>-8.16</z-offset-m>
         <field-of-view>55</field-of-view>
    </view>

    <exit>
      <condition>
	    <equals>
	      <property>engines/engine[1]/running</property>
          <value>1</value>
	    </equals>
      </condition>
    </exit>
  </step>

  <step>
    <message>Moteur droit démarré !</message>
    <view>
      <heading-offset-deg>-100</heading-offset-deg>
      <pitch-offset-deg>-30</pitch-offset-deg>
      <roll-offset-deg>0.0</roll-offset-deg>
      <x-offset-m>0.65</x-offset-m>
      <y-offset-m>0.48</y-offset-m>
      <z-offset-m>-7.9</z-offset-m>
      <field-of-view>65.0</field-of-view>
    </view>
    <exit>
      <condition>
	    <equals>
	      <property>engines/engine[1]/running</property>
          <value>1</value>
	    </equals>
      </condition>
    </exit>
  </step>


<!-- Arrêt boost pump-->
  <step>
    <message>Vous pouvez maintenant stopper la pompe de gavage droite (Booster pump Right)</message>
    <view>
      <heading-offset-deg>-25</heading-offset-deg>
      <pitch-offset-deg>10</pitch-offset-deg>
      <roll-offset-deg>5</roll-offset-deg>
      <x-offset-m>0</x-offset-m>
      <y-offset-m>0.5</y-offset-m>
      <z-offset-m>-8.16</z-offset-m>
      <field-of-view>50</field-of-view>
    </view>
    <exit>
      <condition>
		<equals>
          <property>controls/fuel/tank[1]/boost-pump-pos</property>
          <value>0</value>
        </equals>
      </condition>
    </exit>
  </step>
<!--
  <step>
    <message>La température d'huile doit être comprise entre 70 et 90 C</message>
    <view>
      <heading-offset-deg>-10</heading-offset-deg>
      <pitch-offset-deg>-50</pitch-offset-deg>
      <roll-offset-deg>5</roll-offset-deg>
      <x-offset-m>0.5</x-offset-m>
      <y-offset-m>0.5</y-offset-m>
      <z-offset-m>-8.16</z-offset-m>
      <field-of-view>50</field-of-view>
    </view>
  </step>
 
-->

  

<!-- Moteur Gauche -->

<!-- boost pump-->
  <step>
    <message>Tournez l'interrupteur Booster pump LEFT pour allumer la pompe de gavage gauche</message>
    <view>
      <heading-offset-deg>-20</heading-offset-deg>
      <pitch-offset-deg>10</pitch-offset-deg>
      <roll-offset-deg>5</roll-offset-deg>
      <x-offset-m>0</x-offset-m>
      <y-offset-m>0.5</y-offset-m>
      <z-offset-m>-8.16</z-offset-m>
      <field-of-view>50</field-of-view>
    </view>
    <exit>
      <condition>
		<equals>
          <property>controls/fuel/tank[0]/boost-pump-pos</property>
          <value>1</value>
        </equals>
      </condition>
    </exit>
  </step>

 <!-- Magneto droit sur both-->
  <step>
    <message>Placez les magnétos du moteur gauche sur both</message>
    <view>
      <heading-offset-deg>0</heading-offset-deg>
      <pitch-offset-deg>0</pitch-offset-deg>
      <roll-offset-deg>0</roll-offset-deg>
      <x-offset-m>0</x-offset-m>
      <y-offset-m>0.55</y-offset-m>
      <z-offset-m>-8.1</z-offset-m>
      <field-of-view>55.0</field-of-view>
    </view>
    <exit>
      <condition>
		<equals>
          <property>controls/engines/engine[0]/magnetos-pos</property>
          <value>3</value>
        </equals>
      </condition>
    </exit>
  </step>

  <!-- Vérifications-->
  <step>
    <message>Vérifions que rien ne se trouve à proximité de l'hélice</message>
    <view>
      <heading-offset-deg>95</heading-offset-deg>
      <pitch-offset-deg>-50</pitch-offset-deg>
      <roll-offset-deg>0.0</roll-offset-deg>
      <x-offset-m>-0.75</x-offset-m>
      <y-offset-m>0.4</y-offset-m>
      <z-offset-m>-7.9</z-offset-m>
      <field-of-view>65.0</field-of-view>
    </view>
  </step>
 
<!-- start gauche -->
  <step>
    <message>Hélice dégagée,nous pouvons démarrer le moteur gauche,maintenez le starter gauche enfoncé quelques secondes</message>
    <view>
      <heading-offset-deg>-25</heading-offset-deg>
      <pitch-offset-deg>10</pitch-offset-deg>
      <roll-offset-deg>5</roll-offset-deg>
      <x-offset-m>0</x-offset-m>
      <y-offset-m>0.5</y-offset-m>
      <z-offset-m>-8.16</z-offset-m>
      <field-of-view>50</field-of-view>
    </view>
    <exit>
      <condition>
		<equals>
          <property>engines/engine[0]/running</property>
          <value>1</value>
        </equals>
      </condition>
    </exit>
  </step>

  <step>
    <message>Moteur gauche démarré !</message>
    <view>
      <heading-offset-deg>95</heading-offset-deg>
      <pitch-offset-deg>-50</pitch-offset-deg>
      <roll-offset-deg>0.0</roll-offset-deg>
      <x-offset-m>-0.75</x-offset-m>
      <y-offset-m>0.4</y-offset-m>
      <z-offset-m>-7.9</z-offset-m>
      <field-of-view>65.0</field-of-view>
    </view>
    <exit>
      <condition>
	    <equals>
	      <property>engines/engine[0]/running</property>
          <value>1</value>
	    </equals>
      </condition>
    </exit>
  </step>
  
 <!-- Arrêt boost pump-->
  <step>
    <message>Vous pouvez arreter la pompe de gavage gauche (Boost pump Left)</message>
    <view>
      <heading-offset-deg>-25</heading-offset-deg>
      <pitch-offset-deg>10</pitch-offset-deg>
      <roll-offset-deg>5</roll-offset-deg>
      <x-offset-m>0</x-offset-m>
      <y-offset-m>0.5</y-offset-m>
      <z-offset-m>-8.16</z-offset-m>
      <field-of-view>50</field-of-view>
    </view>
    <exit>
      <condition>
		<equals>
          <property>controls/fuel/tank[0]/boost-pump-pos</property>
          <value>0</value>
        </equals>
      </condition>
    </exit>
  </step>

  <end>
    <message>Félicitation, vous venez de démarrer les moteurs du DC-3</message>
  </end>
</PropertyList>
