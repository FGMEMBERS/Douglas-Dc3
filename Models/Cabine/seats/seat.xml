<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>seat.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>siege</object-name>
    <object-name>accoudoirs</object-name>
    <object-name>reposetete</object-name>
    <object-name>tablette</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- LoD -->
  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>32</max-m>
  </animation>

  <animation>
    <type>material</type>
    <object-name>siege</object-name>
    <object-name>accoudoirs</object-name>
    <object-name>reposetete</object-name>
    <object-name>tablette</object-name>
    <condition>
      <equals>
        <property>sim/model/config/version</property>
        <value>civilian-red</value>
      </equals>
    </condition>
    <texture>colors.dds</texture>
  </animation>

  <animation>
    <type>material</type>
    <object-name>siege</object-name>
    <object-name>accoudoirs</object-name>
    <object-name>reposetete</object-name>
    <object-name>tablette</object-name>
    <condition>
      <equals>
        <property>sim/model/config/version</property>
        <value>civilian-gray</value>
      </equals>
    </condition>
    <texture>colors_gray.dds</texture>
  </animation>

</PropertyList>

