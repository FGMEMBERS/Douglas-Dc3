<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>rideau.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>rideau</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- Civilian red version -->
  <animation>
    <type>material</type>
    <object-name>rideau</object-name>
    <condition>
      <equals>
        <property>sim/model/config/version</property>
        <value>civilian-red</value>
      </equals>
    </condition>
    <texture>colors.png</texture>
  </animation>

  <!-- Civilian gray version -->
  <animation>
    <type>material</type>
    <object-name>rideau</object-name>
    <condition>
      <equals>
        <property>sim/model/config/version</property>
        <value>civilian-gray</value>
      </equals>
    </condition>
    <texture>colors_gray.png</texture>
  </animation>

</PropertyList>

