<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>propeller.ac</path>
 
  <animation>
    <object-name>bol</object-name>   
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>   

  <model>
    <name>Blade1</name>
    <path>Aircraft/Douglas-Dc3/Models/Engines/Propeller/bladeL.xml</path>
  </model>

  <model>
    <name>Blade2</name>
    <path>Aircraft/Douglas-Dc3/Models/Engines/Propeller/bladeL.xml</path>
    <offsets>
      <roll-deg> 120 </roll-deg>
    </offsets>
  </model>

  <model>
    <name>Blade3</name>
    <path>Aircraft/Douglas-Dc3/Models/Engines/Propeller/bladeL.xml</path>
    <offsets>
      <roll-deg> 240 </roll-deg>
    </offsets>
  </model>

  <animation>
    <name>helice</name>
    <object-name>bol</object-name>   
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>Blade1</object-name>
    <object-name>Blade2</object-name>   
    <object-name>Blade3</object-name>
  </animation>   

  <!-- Mise en place des pales par défaut -->
  <animation>
    <type>select</type>
    <object-name>Blade1</object-name>
    <object-name>Blade2</object-name>   
    <object-name>Blade3</object-name>
    <condition>
      <or>
        <less-than>
          <property>engines/engine[0]/rpm</property>
          <value>1000</value>
        </less-than>
        <property>controls/engines/engine[0]/propeller-feather</property>
      </or>
    </condition>
  </animation>

  <!-- Sélection Pales/disque en fonction de "RPM" -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <and>
        <greater-than>
          <property>engines/engine[0]/rpm</property>
          <value>1000</value>
        </greater-than>
        <equals>
          <property>controls/engines/engine[0]/propeller-feather</property>
          <value> false </value>
        </equals>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
      <and>
        <and>
          <greater-than>
            <property>engines/engine[0]/rpm</property>
            <value>400.000</value>
          </greater-than>
          <less-than>
            <property>engines/engine[0]/rpm</property>
            <value>1000.001</value>
          </less-than>
        </and>
        <equals>
          <property>controls/engines/engine[0]/propeller-feather</property>
          <value> false </value>
        </equals>
      </and>
    </condition>
  </animation>

  <!-- Rotation de l'hélice -->
  <animation>
    <type>spin</type>
    <object-name>helice</object-name>
    <condition>
      <equals>
        <property>controls/engines/engine[0]/propeller-feather</property>
        <value> false </value>
      </equals>
    </condition>
    <property>engines/engine[0]/rpm</property>
    <factor> -0.479 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

