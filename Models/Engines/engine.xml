  </animation>

  <animation>
    <name>LowPoly</name>
    <object-name>moteurlow</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>HighPoly</object-name>
    <condition>
      <property>sim/model/config/details-high</property>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LowPoly</object-name>
    <condition>
      <not><property>sim/model/config/details-high</property></not>
    </condition>
  </animation>

