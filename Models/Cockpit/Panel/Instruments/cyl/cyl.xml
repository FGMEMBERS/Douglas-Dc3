<?xml version="1.0" encoding="UTF-8"?>

<!--TempÃ©rature cylindre-->
<PropertyList>

  <path>cyl.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>fond2</object-name>
    <object-name>face</object-name>
    <object-name>needleL</object-name>
    <object-name>needleR</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

    <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needleL</object-name>
    <object-name>needleR</object-name>
    <emission>
      <factor-prop>controls/lighting/instruments-norm</factor-prop>
    <red>0.8</red>
    <green>0.4</green>
    <blue>0.2</blue>
    </emission>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needleL</object-name>
    <property>/engines/engine[0]/est-cht</property>
    <interpolation>
      <entry><ind>   0 </ind><dep>    0 </dep></entry>
	    <entry><ind> 572 </ind><dep> -120 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.0015 </x-m>
      <y-m> 0.0206 </y-m>
      <z-m> 0.0037 </z-m>  
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation> 
    <type>rotate</type>
    <object-name>needleR</object-name>
    <property>/engines/engine[1]/est-cht</property>
    <interpolation>
      <entry><ind>   0 </ind><dep>   0 </dep></entry>
	    <entry><ind> 572 </ind><dep> 120 </dep></entry>
    </interpolation>
    <center>
      <x-m> -0.0015 </x-m>
      <y-m> -0.0206 </y-m>
      <z-m> -0.0037 </z-m> 
    </center>
    <axis> 
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

