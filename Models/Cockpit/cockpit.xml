<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>cockpit.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>cab-interieur</object-name>    
    <object-name>cab-plancher</object-name>
    <object-name>cadres-vitres</object-name>
    <object-name>guide</object-name>
    <object-name>poignée</object-name>
    <object-name>verrou</object-name>
    <object-name>structure</object-name>
    <!-- Objets transparents -->
    <object-name>cab-intvitres</object-name>
  </animation>

  <animation>
    <type>select</type>
    <object-name>cab-intvitres</object-name>
    <condition>
      <equals>
        <property>sim/model/config/glass-reflection</property>
        <value>true</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>cab-intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>cab-intvitres</object-name>
  </animation>

  <!-- Civilian red version -->
  <animation>
    <type>material</type>
    <object-name>cab-interieur</object-name>    
    <object-name>cab-plancher</object-name>
    <object-name>cadres-vitres</object-name>
    <object-name>guide</object-name>
    <object-name>poignée</object-name>
    <object-name>verrou</object-name>
    <object-name>structure</object-name>
    <condition>
      <equals>
        <property>sim/model/config/version</property>
        <value>civilian-red</value>
      </equals>
    </condition>
    <texture>colors.dds</texture>
  </animation>

  <!-- Civilian gray version -->
  <animation>
    <type>material</type>
    <object-name>cab-interieur</object-name>    
    <object-name>cab-plancher</object-name>
    <object-name>cadres-vitres</object-name>
    <object-name>guide</object-name>
    <object-name>poignée</object-name>
    <object-name>verrou</object-name>
    <object-name>structure</object-name>
    <condition>
      <equals>
        <property>sim/model/config/version</property>
        <value>civilian-gray</value>
      </equals>
    </condition>
    <texture>colors_gray.dds</texture>
  </animation>

  <!-- Military version -->
  <animation>
    <type>material</type>
    <object-name>cab-interieur</object-name>
    
    <object-name>cab-plancher</object-name>
    <object-name>cadres-vitres</object-name>
    <object-name>guide</object-name>
    <object-name>poignée</object-name>
    <object-name>verrou</object-name>
    <object-name>structure</object-name>
    <condition>
      <equals>
        <property>sim/model/config/version</property>
        <value>military</value>
      </equals>
    </condition>
    <texture>colors_military.dds</texture>
  </animation>

  <!--overhead Panneau Cockpit Supérieur-->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cockpit/Overhead/overhead.xml</path>
    <offsets>
      <x-m> -0.03 </x-m>
      <y-m>  0 </y-m>
      <z-m>  0 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cockpit/Panel/panel.xml</path>
    <offsets>
      <x-m> -0.200 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.560 </z-m>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m>  0.156 </x-m>
      <y-m> -0.424 </y-m>
      <z-m> -0.335 </z-m>
    </offsets>
  </model>

  <!-- Copilote -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Pilot/copilot.xml</path>
    <offsets>
      <x-m>  0.156 </x-m>
      <y-m>  0.424 </y-m>
      <z-m> -0.335 </z-m>
    </offsets>
  </model>

  <!-- Les sièges -->
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cockpit/seats/all-pilot-seats.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <!-- Essuies glace -->
 
  <model>
    <path>Aircraft/Douglas-Dc3/Models/Cockpit/Panel/Wipers/wip-tube.xml</path>
    <offsets>
      <x-m>  0 </x-m>
      <y-m>  0 </y-m>
      <z-m>  0 </z-m>	  
    </offsets>
  </model>
  
  <model>   
  <path>Aircraft/Douglas-Dc3/Models/Cockpit/Panel/Wipers/wipersL.xml</path>
    <offsets>
      <x-m> -0.185  </x-m>
      <y-m> -0.295  </y-m>
      <z-m>  0.0505 </z-m>
	  <pitch-deg> 16.7 </pitch-deg>
      <heading-deg> 35 </heading-deg>
    </offsets>
  </model>

  <model>
  <path>Aircraft/Douglas-Dc3/Models/Cockpit/Panel/Wipers/wipersR.xml</path>
    <offsets>
      <x-m> -0.185  </x-m>
      <y-m>  0.295  </y-m>
      <z-m>  0.0505 </z-m>
	  <pitch-deg> 16.7 </pitch-deg>
      <heading-deg> -35 </heading-deg>
    </offsets>
  </model>

</PropertyList>

